div#addForm.container.col-md-8
	div.form-group
			form(method="post" action="/api/books/")
				label(for="name") Title
				input(type="text" name="title" placeholder="Please enter title ..." required).form-control
				label(for="author") Author
				input(type="text"  name="author" placeholder="Please enter the author(s) ..." required).form-control
				label(for="genre") Genre
				input(type="text" name="genre" placeholder="Please enter the genre ...").form-control

				label(for="price") price 
				input(type="number" name="price" min="0" placeholder="Please enter the price ...").form-control
				br 
				button(type="submit").btn.btn-primary.pull-right Save

