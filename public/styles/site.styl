// Header Section
// ---------------------------------------------------------------------

#logo
	margin-left 30px

#logoIcons img
	height 20px

// ---------------------------------------------------------------------
// Side bar and navigation
// ---------------------------------------------------------------------

#navList
	float left
	width 200px
	height 600px
	font-size 18px
	color #fff
	background coolBlack

#navList ul
	margin 0
	padding 5px
	list-style none

#navList li
	margin 0 auto
	padding 10px 0
	display block

#navList li:hover
	background bluey
	transition background 1.0s ease

