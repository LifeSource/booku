.panel.panel-primary
	.panel-heading Add Book Form
	.panel-body
		form(name="addBookForm" method="post" action="/api/books").form-horizontal
			fieldset
				legend Book Information
			.form-group
				label(for="name").control-label.col-md-1 Title:
				.col-md-10
					input(type="text" name="title" placeholder="Please enter title ..." required).form-control
			.form-group
				label(for="name").control-label.col-md-1 Author:
				.col-md-10
					input(type="text"  name="author" placeholder="Please enter the author(s) ..." required).form-control

			.form-group
				label(for="genre").control-label.col-md-1 Genre
				.col-md-10
					input(type="text" name="genre" placeholder="Please enter the genre ...").form-control

			.form-group
				label(for="price").control-label.col-md-1 price 
				.col-md-10
					input(type="number" name="price" min="0" step="0.05" placeholder="Please enter the price ...").form-control

			.form-group
				.col-md-1.col-md-offset-9
					button(type="submit").btn.btn-primary.form-control Save
				.col-md-1
					button.btn.btn-default.form-control Cancel
