.panel.panel-primary
	.panel-heading Edit: {{ book.title }}
	.panel-body
		form(name="editBookForm" method="post").form-horizontal
			fieldset
				legend Book Information
			.form-group
				label(for="title").col-md-1.control-label Title:
				.col-md-10
					input(type="text" name="title" placeholder="Please enter title ..." required ng-model="book.title").form-control

			.form-group
				label(for="author").col-md-1.control-label Author:
				.col-md-10
					input(type="text" name="author" placeholder="Please enter the author(s) ..." required ng-model="book.author").form-control

			.form-group
				label(for="genre").col-md-1.control-label Genre:
				.col-md-10
					input(type="text" name="genre" placeholder="Please enter the genre ..." ng-model="book.genre").form-control

			.form-group
				label(for="price").col-md-1.control-label Price: 
				.col-md-10
					input(type="number" name="price" min="0" step="0.05" placeholder="Please enter the price ..." ng-model="book.price").form-control

			.form-group
				.col-md-1.col-md-offset-9
					button(type="submit").form-control.btn.btn-primary Save
				.col-md-1
					button(ng-click="cancel()").form-control.btn.btn-default Cancel

