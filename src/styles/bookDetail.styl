#bookDetail 
    max-width 100%
    box-sizing border-box
    display flex
    justify-content space-between 

    div
        max-width 100%

.bookInfo
    display flex

.bookSummary
    padding 0 1.5%
    width 50%
    font-size 1.2em

    div:first-child
        padding 15px
        margin-bottom 15px
        border-radius 5px
        font-size 1.5em
        background #5bc0ff

.bookInfo
    font-size 1.5em
    display flex
    flex-flow column wrap

    div:first-child
        padding 55px
    div:nth-child(2n)
        padding 15px
        background-color #e8fff5
    div:last-child
        padding 15px
        background-color #ffdd7f
