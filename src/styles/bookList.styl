#bookList
    margin 50px 0
    display flex
    flex-flow row wrap
    justify-content center
    
    img 
        width 123px
        height 152px

    ul
        width 100%
        list-style none
        display flex
        flex-flow row wrap

    li
        margin auto
        box-shadow 2px 2px 2px 2px rgba(0, 0, 0, 0.2)

    li:hover
        position relative
        transform translatey(50px) scalex(2) scaley(2) 
        transition transform 0.5s ease 
