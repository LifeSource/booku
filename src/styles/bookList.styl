#bookList

    padding 5%

    img 
        width 123px
        height 152px
        display block

    ul 
        list-style none
        display flex
        flex-flow row wrap

        li
            margin-right 30px
            box-shadow 2px 2px 2px 2px rgba(0, 0, 0, 0.2)


        li:hover
            opacity 0.5
            color yellow
            transition background 0.8s ease
