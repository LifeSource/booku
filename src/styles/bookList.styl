#bookList

    padding 5%

    img 
        width 123px
        height 152px
        display block

    ul 
        list-style none
        display flex
        flex-flow row wrap
        justify-content center

        li
            margin-right 30px
            box-shadow 2px 2px 2px 2px rgba(0, 0, 0, 0.2)


        li:hover
            position relative
            transform scalex(2) scaley(2)
            transition all 0.5s ease
