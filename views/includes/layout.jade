doctype html
html
	head
		title= Booku 
		include header.jade
	body(ng-app="booku")
		header.container
			div#menu.navbar.navbar-inverse.navbar-fixed-top
				div.navbar-header
					button(data-toggle="collapse" data-target=".navbar-collapse").btn.btn-success.navbar-toggle
						span.glyphicon.glyphicon-list
					div#logo
						a(href=".")
							h3 Booku
				div.navbar-collapse.collapse
					ul.nav.navbar-nav.navbar-right
						li.nav.active
							a(href=".") Home
						li.nav
							a(href="/about.html") About
		section#sideBar.col-md-2.inverse
			ul#navList.list-group
				li.list-group-item Home 
		section#main.col-md-10
			block content
		include scripts.jade
		.container.footer
			hr
			include footer.jade
